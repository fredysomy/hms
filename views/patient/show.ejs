<%- include('../partials/header'); -%>
<div class="container">
	<div class="jumbotron">
  		<div class="container">
  			<h1 style="text-align:center;">Patients</h1>
  			<%if(currentUser.username=="us"){%>
  			<a class="btn btn-success btn-lg" href="/addPatient">Add Patient</a>
  			<%}%>
		</div>
	</div>
	<div class="table-responsive">
	<table class="table table-hover">
	<thead>
	<tr>
	<th>Patient</th>
	<th>Age</th>
	<th>Email</th>
	<th>Gender</th>
	<th>Address</th>
	<th></th>
	<th></th>
	</tr>
	</thead>
	<%patients.forEach(function(patient){%>
	<tr>
	<td><%=patient.pname%></td>
	<td><%=patient.page%></td>
	<td><%=patient.pemail%></td>
	<td><%=patient.pgender%></td>
	<td><%=patient.paddr%></td>
	<td>
	<%if(currentUser.username=="us"){%>
	<a class="btn btn-md btn-warning" href="/editPatient/<%=patient._id%>">Edit</a>
	</td>
	<td>
	<form class="delete-form" action="/deletePatient/<%=patient._id%>?_method=DELETE" method="POST">
                  <input type="submit" class="btn btn-md btn-danger" value="delete">
    </form>
	</td>
	<%}%>
	</tr>
	<%});%>
	</table>
	</div>
</div>
<%- include('../partials/footer'); -%>