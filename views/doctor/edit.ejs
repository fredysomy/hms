<%- include('../partials/header'); -%>

<div class="container">
	<div class="row">
		<h1 style="text-align:center">edit doctor <%=doctor.dname%></h1>
		<div style="width:30% ;margin:25px auto ">

			<form action="/editDoctor/<%=doctor._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" value="<%=doctor.dname%>" name="doctor[dname]">
			</div>
			<div class="form-group">
				<input class="form-control" type="number" value="<%=doctor.dage%>" name="doctor[dage]" step="1">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" value="<%=doctor.specialization%>" name="doctor[specialization]">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">submit</button>
			</div>
				
				
				
	
			</form>
			<a href="/getDoctor">Go back!</a>
		</div>


	</div>

</div>
