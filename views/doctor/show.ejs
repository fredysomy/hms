<%- include('../partials/header'); -%>
<div class="container">
	<div class="jumbotron">
  		<div class="container">
  			<h1 style="text-align:center;">Doctors</h1>
  			<%if(currentUser.username=="ad"){%>
  			<a class="btn btn-success btn-lg" href="/addDoctor">Add Doctor</a>
  			<%}%>
		</div>
	</div>
	<div class="table-responsive">
	<table class="table table-hover ">
	<thead>
	<tr>
	<th>Doctor</th>
	<th>Age</th>
	<th>Specialization</th>
	<th></th>
	<th></th>
	</tr>
	</thead>
	<%doctors.forEach(function(doctor){%>
	<tr>
	<td><%=doctor.dname%></td>
	<td><%=doctor.dage%></td>
	<td><%=doctor.specialization%></td>
	<td>
	<%if(currentUser.username=="ad"){%>
	<a class="btn btn-md btn-warning" href="/editDoctor/<%=doctor._id%>">Edit</a>
	</td>
	<td>
	<form class="delete-form" action="/deleteDoctor/<%=doctor._id%>?_method=DELETE" method="POST">
                  <input type="submit" class="btn btn-md btn-danger" value="delete">
    </form>
	</td>
	<%}%>
	</tr>
	<%});%>
	</table>
	</div>
</div>

<%- include('../partials/footer'); -%>